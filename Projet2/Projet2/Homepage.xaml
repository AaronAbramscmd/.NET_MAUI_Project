<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projet2.Homepage"
             Title="Homepage">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Label
            Text="Enter information to take exam"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Padding="10"
            FontSize="20"
            FontAttributes="Bold"/>

        <Entry x:Name="ID"
               Text=""
               Placeholder="Enter ID"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Numeric"/>

        <Entry x:Name="Fname"
               Text=""
               Placeholder="Enter First Name"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Text"/>

        <Entry x:Name="Lname"
               Text=""
               Placeholder="Enter Last Name"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Text"/>

        <Entry x:Name="Email"
               Text=""
               Placeholder="Enter Email"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Email"/>

        <Button x:Name="Exam"
                Text="Start Exam"
                Clicked="OnClickExam"/>

        <Label x:Name="FailedForm"
               Text=""
               TextColor="Red"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>